<h1>Add Vehicle</h1>
<% if (message) { %>
  <p><%= message %></p>
<% } %>
<form method="POST">
  <label for="classification">Classification:</label>
  <select id="classification" name="classification_id" required>
    <option value="">--Select--</option>
    <% classifications.forEach(c => { %>
      <option value="<%= c.id %>" <%= vehicle.classification_id == c.id ? 'selected' : '' %>><%= c.name %></option>
    <% }) %>
  </select>

  <label for="make">Make:</label>
  <input type="text" id="make" name="make" value="<%= vehicle.make || '' %>" required>

  <label for="model">Model:</label>
  <input type="text" id="model" name="model" value="<%= vehicle.model || '' %>" required>

  <label for="year">Year:</label>
  <input type="number" id="year" name="year" min="1990" max="2030" value="<%= vehicle.year || '' %>" required>

  <label for="price">Price:</label>
  <input type="number" id="price" name="price" min="0" step="100" value="<%= vehicle.price || '' %>" required>

  <button type="submit">Add Vehicle</button>
</form>
